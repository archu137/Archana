package week1.assignment;

public class CheckNumberIsPositive {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//Testing positive number
int version1=10;
if(version1>0)
	System.out.println("The number "+version1+" is positive");
else
	System.out.println("The number "+version1+" is negative");
//Testing negative number
int version2=-10;
if(version2>0)
	System.out.println("The number "+version2+" is positive");
else
	System.out.println("The number "+version2+" is negative");
	}
}
